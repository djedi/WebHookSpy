<script>
  document.addEventListener("alpine:init", () => {
    Alpine.data("homePage", homePage);
  });

  function homePage() {
    return {
      endpoint: null,
      loading: false,
      error: "",
      copied: null,
      async createEndpoint(secure = false) {
        this.loading = true;
        this.error = "";
        this.endpoint = null;
        try {
          const url = secure ? "/api/endpoints?secure=true" : "/api/endpoints";
          const response = await fetch(url, { method: "POST" });
          if (!response.ok) {
            const data = await response.json().catch(() => ({}));
            throw new Error(data.error || "Unable to create endpoint");
          }
          const payload = await response.json();
          this.endpoint = {
            id: payload.id,
            webhookUrl: `${location.origin}/${payload.id}`,
            inspectorUrl: `${location.origin}/inspect/${payload.id}`,
            protected: payload.protected,
            accessKey: payload.accessKey, // Only present for secure endpoints
          };
        } catch (error) {
          this.error = error.message || "Unknown error";
        } finally {
          this.loading = false;
        }
      },
      async copy(value, type) {
        const copied = window.safeCopyToClipboard ? await window.safeCopyToClipboard(value) : false;
        if (copied) {
          this.copied = type;
          this.showCopyToast(this.copyMessageFor(type));
          setTimeout(() => {
            this.copied = null;
          }, 2000);
          return;
        }
        this.copied = null;
        this.showCopyToast("Unable to copy text");
      },
      copyMessageFor(type) {
        const messages = {
          accessKey: "Access key copied to clipboard",
          webhook: "Webhook URL copied",
          inspector: "Inspector URL copied",
        };
        return messages[type] || "Copied to clipboard";
      },
      showCopyToast(message) {
        const store = window.Alpine && typeof window.Alpine.store === "function" ? window.Alpine.store("toast") : null;
        if (store && typeof store.show === "function") {
          store.show(message);
        }
      },
    };
  }
</script>
