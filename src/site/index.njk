<script>
  document.addEventListener("alpine:init", () => {
    Alpine.data("homePage", homePage);
  });

  function homePage() {
    return {
      endpoint: null,
      loading: false,
      error: "",
      copied: null,
      async createEndpoint() {
        this.loading = true;
        this.error = "";
        this.endpoint = null;
        try {
          const response = await fetch("/api/endpoints", { method: "POST" });
          if (!response.ok) {
            throw new Error("Unable to create endpoint");
          }
          const payload = await response.json();
          this.endpoint = {
            id: payload.id,
            webhookUrl: `${location.origin}/${payload.id}`,
            inspectorUrl: `${location.origin}/inspect/${payload.id}`,
          };
        } catch (error) {
          this.error = error.message || "Unknown error";
        } finally {
          this.loading = false;
        }
      },
      async copy(value, type) {
        await navigator.clipboard.writeText(value);
        this.copied = type;
        setTimeout(() => {
          this.copied = null;
        }, 2000);
      },
    };
  }
</script>
