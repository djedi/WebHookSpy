---
layout: layout.njk
title: Live Webhook Inspector - WebhookSpy
description: Real-time webhook request viewer. Inspect HTTP headers, request body, query parameters, and more.
noindex: true
---

<section
  class="space-y-6"
  x-data="endpointViewer()"
  x-init="init()"
>
  <!-- Access Key Prompt (for protected endpoints) -->
  <template x-if="needsAuth">
    <div class="relative">
      <div class="absolute inset-0 bg-gradient-to-r from-violet-500/20 via-purple-500/20 to-violet-500/20 rounded-3xl blur-2xl opacity-50"></div>
      <div class="relative glass bg-white/80 dark:bg-slate-900/80 rounded-3xl border border-slate-200/50 dark:border-slate-700/50 p-8 sm:p-12 shadow-xl">
        <div class="max-w-md mx-auto text-center space-y-6">
          <div class="w-16 h-16 rounded-2xl bg-violet-100 dark:bg-violet-900/30 flex items-center justify-center mx-auto">
            <svg class="w-8 h-8 text-violet-600 dark:text-violet-400" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M16.5 10.5V6.75a4.5 4.5 0 10-9 0v3.75m-.75 11.25h10.5a2.25 2.25 0 002.25-2.25v-6.75a2.25 2.25 0 00-2.25-2.25H6.75a2.25 2.25 0 00-2.25 2.25v6.75a2.25 2.25 0 002.25 2.25z" />
            </svg>
          </div>
          <div>
            <h2 class="text-2xl font-bold text-slate-900 dark:text-white">Protected Endpoint</h2>
            <p class="text-slate-600 dark:text-slate-400 mt-2">This endpoint requires an access key to view captured requests.</p>
          </div>
          <div class="space-y-3">
            <input
              type="text"
              x-model="accessKeyInput"
              @keyup.enter="unlockWithKey"
              placeholder="Enter access key (whspy_...)"
              class="w-full px-4 py-3 rounded-xl border border-slate-200 dark:border-slate-700 bg-white dark:bg-slate-800 text-slate-900 dark:text-white placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-violet-500 focus:border-transparent font-mono text-sm"
            >
            <button
              @click="unlockWithKey"
              :disabled="loading || !accessKeyInput.trim()"
              class="w-full px-6 py-3 rounded-xl bg-violet-600 hover:bg-violet-700 disabled:opacity-50 disabled:cursor-not-allowed text-white font-semibold transition-colors"
            >
              <span x-show="!loading">Unlock Endpoint</span>
              <span x-show="loading" class="flex items-center justify-center gap-2">
                <svg class="animate-spin w-5 h-5" fill="none" viewBox="0 0 24 24">
                  <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                  <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                </svg>
                Verifying...
              </span>
            </button>
          </div>
          <template x-if="error">
            <p class="text-sm text-rose-600 dark:text-rose-400" x-text="error"></p>
          </template>
          <p class="text-xs text-slate-500 dark:text-slate-400">Webhook capture is still active. Requests are being recorded.</p>
        </div>
      </div>
    </div>
  </template>

  <!-- Security Warning Banner (only for public endpoints) -->
  <template x-if="!needsAuth && !isProtected">
    <div class="flex items-start gap-3 p-4 rounded-2xl bg-amber-50 dark:bg-amber-900/20 border border-amber-200 dark:border-amber-800 text-amber-800 dark:text-amber-200" x-data="{ dismissed: localStorage.getItem('security-warning-dismissed') === 'true' }" x-show="!dismissed">
      <svg class="w-5 h-5 flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v3.75m-9.303 3.376c-.866 1.5.217 3.374 1.948 3.374h14.71c1.73 0 2.813-1.874 1.948-3.374L13.949 3.378c-.866-1.5-3.032-1.5-3.898 0L2.697 16.126zM12 15.75h.007v.008H12v-.008z" />
      </svg>
      <div class="flex-1">
        <p class="font-medium text-sm">Security Notice</p>
        <p class="text-xs mt-1 text-amber-700 dark:text-amber-300">Do not send production webhooks containing API keys, passwords, or sensitive data. All captured requests are stored unencrypted and accessible to anyone with the endpoint URL.</p>
      </div>
      <button @click="dismissed = true; localStorage.setItem('security-warning-dismissed', 'true')" class="flex-shrink-0 p-1 rounded-lg hover:bg-amber-200 dark:hover:bg-amber-800 transition-colors">
        <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    </div>
  </template>

  <!-- Header Card (hidden when auth needed) -->
  <template x-if="!needsAuth">
  <div class="space-y-6">
  <div class="relative">
    <div class="absolute inset-0 bg-gradient-to-r from-brand/10 via-sky-500/10 to-violet-500/10 rounded-3xl blur-xl opacity-50"></div>
    <div class="relative glass bg-white/80 dark:bg-slate-900/80 rounded-3xl border border-slate-200/50 dark:border-slate-700/50 p-6 sm:p-8 shadow-lg">
      <div class="flex flex-col lg:flex-row lg:items-start lg:justify-between gap-6">
        <div class="space-y-4">
          <div class="flex flex-wrap items-center gap-3">
            <div class="flex items-center gap-2 px-3 py-1.5 rounded-full bg-emerald-100 dark:bg-emerald-900/30 text-emerald-700 dark:text-emerald-300 text-sm font-medium">
              <span class="relative flex h-2 w-2">
                <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-emerald-500 opacity-75"></span>
                <span class="relative inline-flex rounded-full h-2 w-2 bg-emerald-500"></span>
              </span>
              Live
            </div>
            <span class="text-xs text-slate-500 dark:text-slate-400">Keeps last 100 requests &bull; <span x-show="isProtected">Endpoint &amp; access key expire</span><span x-show="!isProtected">Data clears</span> after 7 days of inactivity</span>
          </div>
          <div>
            <p class="text-sm text-slate-500 dark:text-slate-400 mb-1">Endpoint ID</p>
            <h1 class="text-xl sm:text-2xl font-bold font-mono text-slate-900 dark:text-white" x-text="endpointId"></h1>
          </div>
        </div>

        <div class="flex flex-col sm:flex-row gap-3">
          <div class="relative group">
            <button
              class="w-full sm:w-auto inline-flex items-center justify-center gap-2 px-4 py-2.5 rounded-xl bg-slate-100 dark:bg-slate-800 hover:bg-slate-200 dark:hover:bg-slate-700 text-slate-700 dark:text-slate-200 font-medium text-sm transition-colors"
              @click="copyUrl(endpointUrl)"
              x-data="{ copied: false }"
              @click="copied = true; copyUrl(endpointUrl); setTimeout(() => copied = false, 2000)"
            >
              <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M15.666 3.888A2.25 2.25 0 0013.5 2.25h-3c-1.03 0-1.9.693-2.166 1.638m7.332 0c.055.194.084.4.084.612v0a.75.75 0 01-.75.75H9a.75.75 0 01-.75-.75v0c0-.212.03-.418.084-.612m7.332 0c.646.049 1.288.11 1.927.184 1.1.128 1.907 1.077 1.907 2.185V19.5a2.25 2.25 0 01-2.25 2.25H6.75A2.25 2.25 0 014.5 19.5V6.257c0-1.108.806-2.057 1.907-2.185a48.208 48.208 0 011.927-.184" />
              </svg>
              <span x-text="urlCopied ? 'Copied!' : 'Copy URL'"></span>
            </button>
          </div>
          <a
            href="/"
            class="inline-flex items-center justify-center gap-2 px-4 py-2.5 rounded-xl border border-slate-200 dark:border-slate-700 hover:bg-slate-50 dark:hover:bg-slate-800 text-slate-700 dark:text-slate-200 font-medium text-sm transition-colors"
          >
            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
            </svg>
            New Endpoint
          </a>
          <button
            type="button"
            class="inline-flex items-center justify-center gap-2 px-4 py-2.5 rounded-xl bg-rose-600 hover:bg-rose-700 text-white font-medium text-sm transition-colors disabled:opacity-60 disabled:cursor-not-allowed"
            @click="deleteEndpoint"
            :disabled="deletingEndpoint || endpointDeleted"
          >
            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.108 1.022.169m-1.022-.17L18.16 19.673A2.25 2.25 0 0115.916 21H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .566c.34-.061.68-.117 1.022-.169m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0" />
            </svg>
            <span x-text="deletingEndpoint ? 'Deleting...' : 'Delete Endpoint'"></span>
          </button>
        </div>
      </div>

      <!-- URL Cards -->
      <div class="grid gap-4 lg:grid-cols-2 mt-6 pt-6 border-t border-slate-200/50 dark:border-slate-700/50">
        <div class="rounded-2xl bg-slate-50 dark:bg-slate-800/50 p-4 space-y-2">
          <div class="flex items-center gap-2 text-sm">
            <div class="w-6 h-6 rounded-lg bg-brand/10 dark:bg-brand/20 flex items-center justify-center">
              <svg class="w-3.5 h-3.5 text-brand" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M13.19 8.688a4.5 4.5 0 011.242 7.244l-4.5 4.5a4.5 4.5 0 01-6.364-6.364l1.757-1.757m13.35-.622l1.757-1.757a4.5 4.5 0 00-6.364-6.364l-4.5 4.5a4.5 4.5 0 001.242 7.244" />
              </svg>
            </div>
            <span class="font-medium text-slate-700 dark:text-slate-300">Webhook URL</span>
          </div>
          <code class="block font-mono text-xs break-all text-slate-800 dark:text-slate-200 bg-white dark:bg-slate-900 rounded-xl px-3 py-2 border border-slate-200 dark:border-slate-700" x-text="endpointUrl"></code>
        </div>
        <div class="rounded-2xl bg-slate-50 dark:bg-slate-800/50 p-4 space-y-2">
          <div class="flex items-center gap-2 text-sm">
            <div class="w-6 h-6 rounded-lg bg-violet-100 dark:bg-violet-900/30 flex items-center justify-center">
              <svg class="w-3.5 h-3.5 text-violet-600 dark:text-violet-400" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M6.75 7.5l3 2.25-3 2.25m4.5 0h3m-9 8.25h13.5A2.25 2.25 0 0021 18V6a2.25 2.25 0 00-2.25-2.25H5.25A2.25 2.25 0 003 6v12a2.25 2.25 0 002.25 2.25z" />
              </svg>
            </div>
            <span class="font-medium text-slate-700 dark:text-slate-300">Quick Test</span>
          </div>
          <code class="block font-mono text-xs break-all text-slate-800 dark:text-slate-200 bg-white dark:bg-slate-900 rounded-xl px-3 py-2 border border-slate-200 dark:border-slate-700">curl -X POST <span x-text="endpointUrl"></span> -d '{"test":true}'</code>
        </div>
      </div>
    </div>
  </div>

  <!-- Main Content Grid -->
  <div class="grid gap-6 lg:grid-cols-[340px_minmax(0,1fr)]">
    <!-- Sidebar - Request List -->
    <aside class="glass bg-white/80 dark:bg-slate-900/80 rounded-2xl border border-slate-200/50 dark:border-slate-700/50 shadow-lg overflow-hidden">
      <div class="p-4 border-b border-slate-200/50 dark:border-slate-700/50">
        <div class="flex items-center justify-between gap-2">
          <h2 class="font-semibold text-slate-900 dark:text-white">Incoming Requests</h2>
          <div class="flex items-center gap-2" x-show="requests.length">
            <span
              class="text-xs font-medium px-2 py-1 rounded-full bg-slate-100 dark:bg-slate-800 text-slate-600 dark:text-slate-400"
              x-text="requests.length + ' / 100'"
            ></span>
            <button
              type="button"
              class="text-xs font-semibold px-3 py-1.5 rounded-full border border-slate-200 dark:border-slate-600 text-slate-600 dark:text-slate-300 hover:bg-slate-100 dark:hover:bg-slate-800 transition disabled:opacity-60 disabled:cursor-not-allowed"
              @click="clearRequests"
              :disabled="clearingRequests || endpointDeleted"
            >
              <span x-text="clearingRequests ? 'Clearing...' : 'Clear All'"></span>
            </button>
          </div>
        </div>
      </div>

      <!-- Error State -->
      <template x-if="error">
        <div class="p-4">
          <div class="flex items-center gap-3 p-4 rounded-xl bg-rose-50 dark:bg-rose-900/20 border border-rose-200 dark:border-rose-800 text-rose-700 dark:text-rose-300 text-sm">
            <svg class="w-5 h-5 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v3.75m9-.75a9 9 0 11-18 0 9 9 0 0118 0zm-9 3.75h.008v.008H12v-.008z" />
            </svg>
            <span x-text="error"></span>
          </div>
        </div>
      </template>

      <!-- Loading State -->
      <template x-if="loading">
        <div class="p-6 text-center">
          <div class="inline-flex items-center gap-3 text-slate-500 dark:text-slate-400">
            <svg class="animate-spin w-5 h-5" fill="none" viewBox="0 0 24 24">
              <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
              <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
            </svg>
            Loading requests...
          </div>
        </div>
      </template>

      <!-- Empty State -->
      <template x-if="!loading && !requests.length && !error">
        <div class="p-6">
          <div class="text-center space-y-4 py-8">
            <div class="w-16 h-16 rounded-2xl bg-slate-100 dark:bg-slate-800 flex items-center justify-center mx-auto">
              <svg class="w-8 h-8 text-slate-400" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M8.625 9.75a.375.375 0 11-.75 0 .375.375 0 01.75 0zm0 0H8.25m4.125 0a.375.375 0 11-.75 0 .375.375 0 01.75 0zm0 0H12m4.125 0a.375.375 0 11-.75 0 .375.375 0 01.75 0zm0 0h-.375m-13.5 3.01c0 1.6 1.123 2.994 2.707 3.227 1.087.16 2.185.283 3.293.369V21l4.184-4.183a1.14 1.14 0 01.778-.332 48.294 48.294 0 005.83-.498c1.585-.233 2.708-1.626 2.708-3.228V6.741c0-1.602-1.123-2.995-2.707-3.228A48.394 48.394 0 0012 3c-2.392 0-4.744.175-7.043.513C3.373 3.746 2.25 5.14 2.25 6.741v6.018z" />
              </svg>
            </div>
            <div>
              <p class="font-semibold text-slate-800 dark:text-slate-200">Waiting for requests</p>
              <p class="text-sm text-slate-500 dark:text-slate-400 mt-1">Send an HTTP request to your webhook URL to see it here.</p>
            </div>
          </div>
        </div>
      </template>

      <!-- Request List -->
      <div class="max-h-[calc(100vh-400px)] overflow-y-auto" x-show="requests.length">
        <div class="p-3 space-y-2">
          <template x-for="request in requests" :key="request.id">
            <button
              type="button"
              class="w-full text-left rounded-xl p-4 transition-all duration-200"
              :class="selectedRequest && selectedRequest.id === request.id
                ? 'bg-brand/10 dark:bg-brand/20 border-2 border-brand shadow-lg shadow-brand/10'
                : 'bg-slate-50 dark:bg-slate-800/50 border-2 border-transparent hover:border-slate-200 dark:hover:border-slate-700 hover:shadow-md'"
              @click="selectRequest(request)"
            >
              <div class="flex items-center justify-between gap-2 mb-2">
                <span
                  class="inline-flex items-center justify-center px-2.5 py-1 rounded-lg font-mono text-xs font-bold uppercase tracking-wide"
                  :class="{
                    'bg-emerald-100 dark:bg-emerald-900/40 text-emerald-700 dark:text-emerald-300': request.method === 'GET',
                    'bg-sky-100 dark:bg-sky-900/40 text-sky-700 dark:text-sky-300': request.method === 'POST',
                    'bg-amber-100 dark:bg-amber-900/40 text-amber-700 dark:text-amber-300': request.method === 'PUT',
                    'bg-orange-100 dark:bg-orange-900/40 text-orange-700 dark:text-orange-300': request.method === 'PATCH',
                    'bg-rose-100 dark:bg-rose-900/40 text-rose-700 dark:text-rose-300': request.method === 'DELETE',
                    'bg-slate-100 dark:bg-slate-800 text-slate-700 dark:text-slate-300': !['GET','POST','PUT','PATCH','DELETE'].includes(request.method)
                  }"
                  x-text="request.method"
                ></span>
                <span class="text-xs text-slate-500 dark:text-slate-400" x-text="humanTime(request.createdAt)"></span>
              </div>
              <p class="font-mono text-sm text-slate-800 dark:text-slate-200 truncate" x-text="request.path"></p>
              <p class="text-xs text-slate-500 dark:text-slate-400 mt-1.5 flex items-center gap-1">
                <svg class="w-3 h-3" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M12 21a9.004 9.004 0 008.716-6.747M12 21a9.004 9.004 0 01-8.716-6.747M12 21c2.485 0 4.5-4.03 4.5-9S14.485 3 12 3m0 18c-2.485 0-4.5-4.03-4.5-9S9.515 3 12 3m0 0a8.997 8.997 0 017.843 4.582M12 3a8.997 8.997 0 00-7.843 4.582m15.686 0A11.953 11.953 0 0112 10.5c-2.998 0-5.74-1.1-7.843-2.918m15.686 0A8.959 8.959 0 0121 12c0 .778-.099 1.533-.284 2.253m0 0A17.919 17.919 0 0112 16.5c-3.162 0-6.133-.815-8.716-2.247m0 0A9.015 9.015 0 013 12c0-1.605.42-3.113 1.157-4.418" />
                </svg>
                <span x-text="request.ip || 'Unknown IP'"></span>
              </p>
            </button>
          </template>
        </div>
      </div>
    </aside>

    <!-- Main Panel - Request Details -->
    <section class="glass bg-white/80 dark:bg-slate-900/80 rounded-2xl border border-slate-200/50 dark:border-slate-700/50 shadow-lg overflow-hidden">
      <!-- Selected Request Details -->
      <template x-if="selectedRequest">
        <div>
          <!-- Request Header -->
          <div class="p-6 border-b border-slate-200/50 dark:border-slate-700/50">
            <div class="flex flex-wrap items-start justify-between gap-4">
              <div class="space-y-3">
                <div class="flex items-center gap-3">
                  <span
                    class="inline-flex items-center justify-center px-4 py-1.5 rounded-xl font-mono text-sm font-bold uppercase tracking-wide"
                    :class="{
                      'bg-emerald-100 dark:bg-emerald-900/40 text-emerald-700 dark:text-emerald-300': selectedRequest.method === 'GET',
                      'bg-sky-100 dark:bg-sky-900/40 text-sky-700 dark:text-sky-300': selectedRequest.method === 'POST',
                      'bg-amber-100 dark:bg-amber-900/40 text-amber-700 dark:text-amber-300': selectedRequest.method === 'PUT',
                      'bg-orange-100 dark:bg-orange-900/40 text-orange-700 dark:text-orange-300': selectedRequest.method === 'PATCH',
                      'bg-rose-100 dark:bg-rose-900/40 text-rose-700 dark:text-rose-300': selectedRequest.method === 'DELETE',
                      'bg-slate-100 dark:bg-slate-800 text-slate-700 dark:text-slate-300': !['GET','POST','PUT','PATCH','DELETE'].includes(selectedRequest.method)
                    }"
                    x-text="selectedRequest.method"
                  ></span>
                  <span class="text-sm text-slate-500 dark:text-slate-400" x-text="humanTime(selectedRequest.createdAt)"></span>
                </div>
                <p class="font-mono text-lg break-all text-slate-900 dark:text-white" x-text="selectedRequest.path"></p>
              </div>
              <div class="flex flex-col sm:flex-row sm:items-center gap-3">
                <div class="flex items-center gap-2 px-4 py-2 rounded-xl bg-slate-100 dark:bg-slate-800">
                  <svg class="w-4 h-4 text-slate-500" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M12 21a9.004 9.004 0 008.716-6.747M12 21a9.004 9.004 0 01-8.716-6.747M12 21c2.485 0 4.5-4.03 4.5-9S14.485 3 12 3m0 18c-2.485 0-4.5-4.03-4.5-9S9.515 3 12 3m0 0a8.997 8.997 0 017.843 4.582M12 3a8.997 8.997 0 00-7.843 4.582m15.686 0A11.953 11.953 0 0112 10.5c-2.998 0-5.74-1.1-7.843-2.918m15.686 0A8.959 8.959 0 0121 12c0 .778-.099 1.533-.284 2.253m0 0A17.919 17.919 0 0112 16.5c-3.162 0-6.133-.815-8.716-2.247m0 0A9.015 9.015 0 013 12c0-1.605.42-3.113 1.157-4.418" />
                  </svg>
                  <span class="font-mono text-sm text-slate-700 dark:text-slate-300" x-text="selectedRequest.ip || 'Unknown'"></span>
                </div>
                <button
                  type="button"
                  class="inline-flex items-center justify-center gap-2 px-4 py-2 rounded-xl border border-rose-200 text-rose-700 dark:text-rose-300 dark:border-rose-900/50 hover:bg-rose-50 dark:hover:bg-rose-900/20 text-sm font-semibold transition disabled:opacity-60 disabled:cursor-not-allowed"
                  @click="deleteRequest(selectedRequest.id)"
                  :disabled="deletingRequestId === selectedRequest.id || endpointDeleted"
                >
                  <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M9.75 9.75l4.5 4.5m0-4.5l-4.5 4.5M21 6.75V19.5a2.25 2.25 0 01-2.25 2.25H5.25A2.25 2.25 0 013 19.5V6.75m18 0V5.25A2.25 2.25 0 0018.75 3H5.25A2.25 2.25 0 003 5.25V6.75m18 0H3" />
                  </svg>
                  <span x-text="deletingRequestId === selectedRequest.id ? 'Deleting...' : 'Delete Request'"></span>
                </button>
              </div>
            </div>
          </div>

          <!-- Quick Info Grid -->
          <div class="grid grid-cols-1 md:grid-cols-3 gap-4 p-6 border-b border-slate-200/50 dark:border-slate-700/50 bg-slate-50/50 dark:bg-slate-800/30">
            <div>
              <p class="text-xs font-medium uppercase tracking-wider text-slate-500 dark:text-slate-400 mb-1">Query Parameters</p>
              <p class="font-mono text-sm break-all text-slate-800 dark:text-slate-200" x-text="Object.keys(selectedRequest.query || {}).length ? JSON.stringify(selectedRequest.query) : 'None'"></p>
            </div>
            <div>
              <p class="text-xs font-medium uppercase tracking-wider text-slate-500 dark:text-slate-400 mb-1">Content Type</p>
              <p class="font-mono text-sm break-all text-slate-800 dark:text-slate-200" x-text="selectedRequest.headers['content-type'] || 'Not specified'"></p>
            </div>
            <div>
              <p class="text-xs font-medium uppercase tracking-wider text-slate-500 dark:text-slate-400 mb-1">User Agent</p>
              <p class="font-mono text-sm break-all text-slate-800 dark:text-slate-200 line-clamp-2" x-text="selectedRequest.headers['user-agent'] || 'Not specified'"></p>
            </div>
          </div>

          <!-- Detailed Sections -->
          <div class="p-6 space-y-6">
            <!-- Headers -->
            <div class="rounded-2xl border border-slate-200 dark:border-slate-700 overflow-hidden">
              <div class="px-4 py-3 bg-slate-100 dark:bg-slate-800 border-b border-slate-200 dark:border-slate-700 flex items-center justify-between">
                <div class="flex items-center gap-2">
                  <svg class="w-4 h-4 text-slate-500" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M9.568 3H5.25A2.25 2.25 0 003 5.25v4.318c0 .597.237 1.17.659 1.591l9.581 9.581c.699.699 1.78.872 2.607.33a18.095 18.095 0 005.223-5.223c.542-.827.369-1.908-.33-2.607L11.16 3.66A2.25 2.25 0 009.568 3z" />
                    <path stroke-linecap="round" stroke-linejoin="round" d="M6 6h.008v.008H6V6z" />
                  </svg>
                  <span class="font-semibold text-slate-700 dark:text-slate-200">Headers</span>
                </div>
                <span class="text-xs text-slate-500 dark:text-slate-400" x-text="Object.keys(selectedRequest.headers || {}).length + ' headers'"></span>
              </div>
              <pre class="p-4 text-sm font-mono overflow-x-auto bg-white dark:bg-slate-900 text-slate-800 dark:text-slate-200 max-h-64" x-html="formatHeaders(selectedRequest.headers)"></pre>
            </div>

            <!-- Body -->
            <div class="rounded-2xl border border-slate-200 dark:border-slate-700 overflow-hidden">
              <div class="px-4 py-3 bg-slate-100 dark:bg-slate-800 border-b border-slate-200 dark:border-slate-700 flex items-center justify-between">
                <div class="flex items-center gap-2">
                  <svg class="w-4 h-4 text-slate-500" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 14.25v-2.625a3.375 3.375 0 00-3.375-3.375h-1.5A1.125 1.125 0 0113.5 7.125v-1.5a3.375 3.375 0 00-3.375-3.375H8.25m0 12.75h7.5m-7.5 3H12M10.5 2.25H5.625c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 00-9-9z" />
                  </svg>
                  <span class="font-semibold text-slate-700 dark:text-slate-200">Body</span>
                </div>
                <template x-if="selectedRequest.truncated">
                  <span class="text-xs px-2 py-1 rounded-full bg-amber-100 dark:bg-amber-900/30 text-amber-700 dark:text-amber-300">Truncated at 512KB</span>
                </template>
              </div>
              <template x-if="selectedRequest.body">
                <pre class="p-4 text-sm font-mono overflow-x-auto bg-white dark:bg-slate-900 text-slate-800 dark:text-slate-200 max-h-96" x-html="formatBody(selectedRequest.body)"></pre>
              </template>
              <template x-if="!selectedRequest.body">
                <div class="p-8 text-center text-slate-500 dark:text-slate-400 bg-white dark:bg-slate-900">
                  <svg class="w-8 h-8 mx-auto mb-2 opacity-50" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M18.364 18.364A9 9 0 005.636 5.636m12.728 12.728A9 9 0 015.636 5.636m12.728 12.728L5.636 5.636" />
                  </svg>
                  <p class="text-sm">No body content</p>
                </div>
              </template>
            </div>
          </div>
        </div>
      </template>

      <!-- Loading State -->
      <template x-if="loading">
        <div class="p-12 text-center">
          <div class="inline-flex items-center gap-3 text-slate-500 dark:text-slate-400">
            <svg class="animate-spin w-6 h-6" fill="none" viewBox="0 0 24 24">
              <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
              <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
            </svg>
            <span class="text-lg">Loading request details...</span>
          </div>
        </div>
      </template>

      <!-- Empty State for Main Panel -->
      <template x-if="!loading && !requests.length && !error">
        <div class="p-12">
          <div class="text-center space-y-6 max-w-md mx-auto">
            <div class="relative">
              <div class="w-24 h-24 rounded-3xl bg-gradient-to-br from-brand/20 to-sky-500/20 flex items-center justify-center mx-auto">
                <svg class="w-12 h-12 text-brand" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M9.348 14.651a3.75 3.75 0 010-5.303m5.304 0a3.75 3.75 0 010 5.303m-7.425 2.122a6.75 6.75 0 010-9.546m9.546 0a6.75 6.75 0 010 9.546M5.106 18.894c-3.808-3.808-3.808-9.98 0-13.789m13.788 0c3.808 3.808 3.808 9.981 0 13.79M12 12h.008v.007H12V12zm.375 0a.375.375 0 11-.75 0 .375.375 0 01.75 0z" />
                </svg>
              </div>
              <div class="absolute -top-2 -right-2 w-6 h-6 rounded-full bg-emerald-500 flex items-center justify-center animate-pulse">
                <svg class="w-3 h-3 text-white" fill="none" viewBox="0 0 24 24" stroke-width="3" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" />
                </svg>
              </div>
            </div>
            <div>
              <h3 class="text-xl font-bold text-slate-900 dark:text-white mb-2">Listening for webhooks</h3>
              <p class="text-slate-600 dark:text-slate-400">
                This endpoint is active and ready to capture requests. Send an HTTP request to see it appear here in real-time.
              </p>
            </div>
            <div class="rounded-2xl bg-slate-100 dark:bg-slate-800 p-4">
              <p class="text-xs text-slate-500 dark:text-slate-400 mb-2">Try this command:</p>
              <code class="block font-mono text-sm text-slate-800 dark:text-slate-200 break-all">curl -X POST <span x-text="endpointUrl"></span> -d '{"hello":"world"}'</code>
            </div>
          </div>
        </div>
      </template>
    </section>
  </div>
  </div>
  </template>
</section>

<script>
  document.addEventListener("alpine:init", () => {
    Alpine.data("endpointViewer", endpointViewer);
  });

  function endpointViewer() {
    const segments = window.location.pathname.split("/").filter(Boolean);
    const endpointId = segments[segments.length - 1] || "";
    // Check for access key in URL or localStorage
    const urlParams = new URLSearchParams(window.location.search);
    const urlKey = urlParams.get('key');
    const storedKey = localStorage.getItem(`webhookspy-key-${endpointId}`);
    return {
      endpointId,
      endpointUrl: `${location.origin}/${endpointId}`,
      requests: [],
      selectedRequest: null,
      loading: true,
      error: "",
      stream: null,
      urlCopied: false,
      isProtected: false,
      needsAuth: false,
      accessKeyInput: "",
      accessKey: urlKey || storedKey || "",
      clearingRequests: false,
      deletingRequestId: null,
      deletingEndpoint: false,
      endpointDeleted: false,
      authQueryString() {
        return this.accessKey ? `?key=${encodeURIComponent(this.accessKey)}` : '';
      },
      async init() {
        if (!this.endpointId) {
          this.error = "Missing endpoint id.";
          this.loading = false;
          return;
        }
        // First check if endpoint is protected
        await this.checkProtected();
        if (this.needsAuth) {
          this.loading = false;
          return;
        }
        await this.loadInitial();
        this.subscribe();
      },
      async checkProtected() {
        try {
          const response = await fetch(`/api/endpoints/${this.endpointId}/protected`);
          if (!response.ok) {
            throw new Error("Endpoint not found or expired.");
          }
          const data = await response.json();
          this.isProtected = data.protected;
          if (this.isProtected && !this.accessKey) {
            this.needsAuth = true;
          } else if (this.isProtected && this.accessKey) {
            // Verify the key works
            const testResponse = await fetch(`/api/endpoints/${this.endpointId}?key=${encodeURIComponent(this.accessKey)}`);
            if (!testResponse.ok) {
              this.accessKey = "";
              localStorage.removeItem(`webhookspy-key-${this.endpointId}`);
              this.needsAuth = true;
            } else {
              // Store valid key and clean URL
              localStorage.setItem(`webhookspy-key-${this.endpointId}`, this.accessKey);
              if (urlKey) {
                window.history.replaceState({}, '', window.location.pathname);
              }
            }
          }
        } catch (error) {
          this.error = error.message || "Unable to check endpoint.";
        }
      },
      async unlockWithKey() {
        if (!this.accessKeyInput.trim()) return;
        this.loading = true;
        this.error = "";
        try {
          const response = await fetch(`/api/endpoints/${this.endpointId}?key=${encodeURIComponent(this.accessKeyInput)}`);
          if (!response.ok) {
            throw new Error("Invalid access key");
          }
          this.accessKey = this.accessKeyInput;
          localStorage.setItem(`webhookspy-key-${this.endpointId}`, this.accessKey);
          this.needsAuth = false;
          await this.loadInitial();
          this.subscribe();
        } catch (error) {
          this.error = error.message || "Invalid access key";
          this.loading = false;
        }
      },
      async loadInitial() {
        try {
          this.endpointDeleted = false;
          const response = await fetch(`/api/endpoints/${this.endpointId}${this.authQueryString()}`);
          if (!response.ok) {
            throw new Error("Endpoint not found or expired.");
          }
          const payload = await response.json();
          this.requests = payload.requests || [];
          this.selectedRequest = this.requests[0] || null;
        } catch (error) {
          this.error = error.message || "Unable to load endpoint.";
        } finally {
          this.loading = false;
        }
      },
      subscribe() {
        if (this.endpointDeleted) return;
        if (this.stream) this.stream.close();
        this.stream = new EventSource(`/api/endpoints/${this.endpointId}/stream${this.authQueryString()}`);
        this.stream.onmessage = (event) => {
          const payload = JSON.parse(event.data);
          if (payload.type === "request") {
            if (!payload.request) return;
            const selectedId = this.selectedRequest?.id;
            this.requests = [payload.request, ...this.requests].slice(0, 100);
            if (!selectedId || selectedId === payload.request.id) {
              this.selectedRequest = this.requests[0] || null;
            } else {
              this.selectedRequest = this.requests.find((request) => request.id === selectedId) || this.requests[0] || null;
            }
          } else if (payload.type === "request_deleted") {
            if (payload.requestId == null) return;
            this.requests = this.requests.filter((request) => request.id !== payload.requestId);
            if (this.selectedRequest?.id === payload.requestId) {
              this.selectedRequest = this.requests[0] || null;
            }
          } else if (payload.type === "requests_cleared") {
            this.requests = [];
            this.selectedRequest = null;
          } else if (payload.type === "endpoint_deleted") {
            this.endpointDeleted = true;
            this.requests = [];
            this.selectedRequest = null;
            this.error = "This endpoint has been deleted.";
            if (this.stream) {
              this.stream.close();
              this.stream = null;
            }
          }
        };
        this.stream.onerror = () => {
          if (this.endpointDeleted) return;
          setTimeout(() => this.subscribe(), 1500);
        };
      },
      humanTime(value) {
        const date = new Date(value);
        const now = new Date();
        const diff = now - date;

        if (diff < 60000) {
          return 'Just now';
        } else if (diff < 3600000) {
          const mins = Math.floor(diff / 60000);
          return `${mins}m ago`;
        } else if (diff < 86400000) {
          const hours = Math.floor(diff / 3600000);
          return `${hours}h ago`;
        }
        return date.toLocaleString();
      },
      formatHeaders(headers) {
        if (!headers || Object.keys(headers).length === 0) return '<span class="text-slate-500">No headers</span>';
        return Object.entries(headers)
          .map(([key, value]) => `<span class="text-violet-600 dark:text-violet-400">${this.escapeHtml(key)}</span>: <span class="text-slate-600 dark:text-slate-300">${this.escapeHtml(value)}</span>`)
          .join('\n');
      },
      formatBody(body) {
        if (!body) return '';
        try {
          const parsed = JSON.parse(body);
          return this.syntaxHighlight(JSON.stringify(parsed, null, 2));
        } catch {
          return this.escapeHtml(body);
        }
      },
      syntaxHighlight(json) {
        // First escape the entire JSON string to prevent XSS
        const escaped = this.escapeHtml(json);
        return escaped.replace(/("(\\u[a-zA-Z0-9]{4}|\\[^u]|[^\\"])*"(\s*:)?|\b(true|false|null)\b|-?\d+(?:\.\d*)?(?:[eE][+\-]?\d+)?)/g, (match) => {
          let cls = 'text-amber-600 dark:text-amber-400'; // number
          if (/^"/.test(match)) {
            if (/:$/.test(match)) {
              cls = 'text-violet-600 dark:text-violet-400'; // key
              match = match.slice(0, -1) + '</span>:';
              return `<span class="${cls}">${match}`;
            } else {
              cls = 'text-emerald-600 dark:text-emerald-400'; // string
            }
          } else if (/true|false/.test(match)) {
            cls = 'text-sky-600 dark:text-sky-400'; // boolean
          } else if (/null/.test(match)) {
            cls = 'text-rose-600 dark:text-rose-400'; // null
          }
          return `<span class="${cls}">${match}</span>`;
        });
      },
      escapeHtml(text) {
        const div = document.createElement('div');
        div.textContent = text;
        return div.innerHTML;
      },
      selectRequest(request) {
        this.selectedRequest = request;
      },
      async deleteRequest(requestId) {
        if (!requestId || this.endpointDeleted) return;
        if (!window.confirm("Delete this request? This cannot be undone.")) return;
        this.deletingRequestId = requestId;
        this.error = "";
        try {
          const response = await fetch(
            `/api/endpoints/${this.endpointId}/requests/${requestId}${this.authQueryString()}`,
            { method: "DELETE" }
          );
          if (!response.ok) {
            const payload = await response.json().catch(() => ({}));
            throw new Error(payload.error || "Unable to delete request.");
          }
          this.requests = this.requests.filter((entry) => entry.id !== requestId);
          if (this.selectedRequest?.id === requestId) {
            this.selectedRequest = this.requests[0] || null;
          }
        } catch (error) {
          this.error = error.message || "Unable to delete request.";
        } finally {
          this.deletingRequestId = null;
        }
      },
      async clearRequests() {
        if (!this.requests.length || this.endpointDeleted) return;
        if (!window.confirm("Clear all captured requests for this endpoint?")) return;
        this.clearingRequests = true;
        this.error = "";
        try {
          const response = await fetch(
            `/api/endpoints/${this.endpointId}/requests${this.authQueryString()}`,
            { method: "DELETE" }
          );
          if (!response.ok) {
            const payload = await response.json().catch(() => ({}));
            throw new Error(payload.error || "Unable to clear requests.");
          }
          this.requests = [];
          this.selectedRequest = null;
        } catch (error) {
          this.error = error.message || "Unable to clear requests.";
        } finally {
          this.clearingRequests = false;
        }
      },
      async deleteEndpoint() {
        if (this.endpointDeleted) return;
        if (!window.confirm("Delete this endpoint and all captured requests? This cannot be undone.")) return;
        this.deletingEndpoint = true;
        this.error = "";
        try {
          const response = await fetch(`/api/endpoints/${this.endpointId}${this.authQueryString()}`, {
            method: "DELETE",
          });
          if (!response.ok) {
            const payload = await response.json().catch(() => ({}));
            throw new Error(payload.error || "Unable to delete endpoint.");
          }
          this.endpointDeleted = true;
          window.location.href = "/";
        } catch (error) {
          this.error = error.message || "Unable to delete endpoint.";
          this.deletingEndpoint = false;
        }
      },
      async copyUrl(url) {
        const copied = window.safeCopyToClipboard ? await window.safeCopyToClipboard(url) : false;
        if (copied) {
          this.urlCopied = true;
          this.showCopyToast("Endpoint URL copied");
          setTimeout(() => {
            this.urlCopied = false;
          }, 2000);
          return;
        }
        this.showCopyToast("Unable to copy text");
      },
      showCopyToast(message) {
        const store = window.Alpine && typeof window.Alpine.store === "function" ? window.Alpine.store("toast") : null;
        if (store && typeof store.show === "function") {
          store.show(message);
        }
      },
    };
  }
</script>
