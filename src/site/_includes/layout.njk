    <script>
      document.addEventListener("alpine:init", () => {
        Alpine.store("toast", {
          message: "",
          visible: false,
          timeoutId: null,
          show(message) {
            this.message = message;
            this.visible = true;
            if (this.timeoutId) {
              clearTimeout(this.timeoutId);
            }
            this.timeoutId = setTimeout(() => {
              this.visible = false;
              this.timeoutId = null;
            }, 2400);
          },
          hide() {
            this.visible = false;
            if (this.timeoutId) {
              clearTimeout(this.timeoutId);
              this.timeoutId = null;
            }
          },
        });
      });
    </script>
    <script>
      document.addEventListener("alpine:init", () => {
        Alpine.data("themeSwitcher", () => ({
          theme: window.__theme?.get() ?? "system",
          modes: ["system", "light", "dark"],
          init() {
            this.theme = this.currentTheme();
            this.onThemeChange = () => {
              this.theme = this.currentTheme();
            };
            this.onStorage = (event) => {
              if (event.key === (window.__theme?.storageKey ?? "")) {
                this.theme = this.currentTheme();
              }
            };
            window.addEventListener("theme:change", this.onThemeChange);
            window.addEventListener("storage", this.onStorage);
          },
          currentTheme() {
            return window.__theme?.get() ?? "system";
          },
          cycle() {
            const currentIndex = this.modes.indexOf(this.theme);
            const nextIndex = (currentIndex + 1) % this.modes.length;
            this.theme = this.modes[nextIndex];
            window.__theme?.set(this.theme);
          },
          labelFor(value) {
            const labels = { system: "System", light: "Light", dark: "Dark" };
            return labels[value] || "System";
          },
        }));
      });
